{% extends 'base.html.twig' %}

{% block title %}Feedback index{% endblock %}

{% block content %}
    <h1>Feedback index</h1>

    <table class="table">
        <thead>
            <tr>

                <th>Nom</th>
                <th>Email</th>
                <th>Message</th>
                <th>Etat</th>

                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for feedback in feedback %}
            <tr>

                <td>{{ feedback.nom }}</td>
                <td>{{ feedback.email }}</td>
                <td>{{ feedback.message }}</td>
                <td>{{ feedback.etat }}</td>

                <td>
                    <a href="{{ path('feedback_show', {'id': feedback.id}) }}">show</a>
                    <a href="{{ path('feedback_edit', {'id': feedback.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>


{% endblock %}
