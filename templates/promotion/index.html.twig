{% extends 'base.html.twig' %}

{% block title %}Promotion index{% endblock %}

{% block content %}
<div class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">

                <div style="margin-left: 670px;">

                    <label class=" text-primary"> Rechercher: </label>
                    <input id="myInput" type="text" name="search" placeholder="Search..">
                </div>



                <div class="card">
                    <div class="card-header card-header-primary">
                        <h4 class="card-title ">Table Promotions</h4>
                        <p class="card-category"> Les Promotions:</p>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table">
        <thead>
            <tr>

                <th>Datedebut</th>
                <th>Datefin</th>
                <th>Type</th>
                <th>Quantite</th>
            </tr>
        </thead>
        <tbody id="myTable">

        {% for promotion in promotions %}
            <tr>
                <td>{{ promotion.datedebut|date('Y-m-d') }}</td>
                <td>{{ promotion.datefin|date('Y-m-d')  }}</td>
                <td>{{ promotion.type }}</td>
                <td>{{ promotion.prix }}</td>
                <td>
                    <form method="post" action="{{ path('promotion_delete', {'id': promotion.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ promotion.id) }}">
                        <button class="btn">Delete</button>
                    </form>
                </td>
                <td>
                    <a href="{{ path('promotion_edit', {'id': promotion.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>


                    </div>
                </div>
            </div>
        </div>
        </div>
    </div>
</div>

        <a href="{{ path('promotion_new') }}">Create new</a>
{% endblock %}
