{% block title %}Users{% endblock %}

{% block content %}
    <h1>Users</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>UserId</th>
                <td>{{ user.userId }}</td>
            </tr>
            <tr>
                <th>Username</th>
                <td>{{ user.username }}</td>
            </tr>
            <tr>
                <th>Password</th>
                <td>{{ user.password }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ user.email }}</td>
