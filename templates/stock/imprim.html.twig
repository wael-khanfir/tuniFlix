{% block body %}
    <h1 align ="center">Liste des stock</h1><hr>


    <table class="table table-striped table-bordered" >
        <thead>
        <tr>
            <th class="wd-15p">ID</th>
            <th class="wd-15p">Quantite</th>
            <th class="wd-20p">Fournisseur</th>
            <th class="wd-15p">NomProduit</th>


        </tr>
        </thead>
        <tbody>
        <tr  {% for stock in stocks %}>
            <td>{{stock.id}}</td>
            <td>{{stock.quantite}}</td>
            <td>{{stock.fournisseur}}</td>
            <td>{{ stock.produit.nom }}</td>




        </tr >
        {% endfor %}
        </tbody>
    </table>


{% endblock %}