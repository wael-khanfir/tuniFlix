{% extends 'base.html.twig' %}

{% block title %}Salle index{% endblock %}



{% block content %}
    <div class="content">
    <div class="container-fluid">
    <div class="row">
    <div class="col-md-12">

        <div style="margin-left: 550px;">
            <form method="post" action="{{ path('recherches') }}">
                <label class=" text-primary"> Recherche: </label>
                <input type="text" name="searchs"><input class="btn" type="submit" value="Recherche">
            </form>

        </div>

        <div class="card">
            <div class="card-header card-header-primary">
                <h4 class="card-title ">Table Salle</h4>
                <p class="card-category"> Les Salles:</p>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table">
                        <thead class=" text-primary">

                        <th>Nom</th>
                        <th>Cinema</th>
                        <th>DateDiffusion</th>
                        <th>NbPlaces</th>
                        <th>Disponible</th>

                        <th>Actions</th>
                        </thead>
                        <tbody>
                        {% for s in salles %}
                            <tr>

                                <td>{{ s.nom }}</td>
                                <td>{{ s.Cinema.nom }}</td>
                                <td>{{ s.dateDiffusion ? s.dateDiffusion|date('Y-m-d') : '' }}</td>
                                <td>{{ s.nbPlaces }}</td>
                                <td>{{ s.disponible }}</td>
                                <td>

                                    <form method="post" action="{{ path('salle_delete', {'id': s.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
                                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ s.id) }}">
                                        <button class="btn">Delete</button>
                                    </form>
                                    <a href="{{ path('salle_edit', {'id': s.id}) }}">edit</a>

                                </td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="6">no records found</td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>

                    <a href="{{ path('salle_new') }}">Create new</a>
                </div>
            </div>
        </div>
    </div>



{% endblock %}